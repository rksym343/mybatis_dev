<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.or.dgit.mybatis_dev.dao.CourseMapper">
	<resultMap type="Course" id="CourseResult">
		<id property="courseId" column="course_id" />
		<result property="name" column="name" />
		<result property="description" column="description" />
		<result property="startDate" column="start_date" />
		<result property="endDate" column="end_date" />
	</resultMap>

	<select id="searchCourse" parameterType="hashmap" resultMap="CourseResult">
		select * from courses where TUTOR_ID = #{tutorId}
		<if test="courseName != null"><!-- param.getkey("courseName") -->
			and name like #{courseName}
		</if>

		<if test="startDate != null"><!-- param.getkey("courseName") -->
			and START_DATE &gt;= #{startDate} <!-- &gt; (>) -->
		</if>
		<if test="endDate != null"><!-- param.getkey("courseName") -->
			and END_DATE &lt;= #{endDate}<!-- &gt; (<) -->
		</if>
	</select>


	<select id="searchChooseCourse" parameterType="hashmap"
		resultMap="CourseResult">
		select * from courses
		<choose>
			<when test="searchBy=='Tutor'">
				where TUTOR_ID = #{tutorId}
			</when>
			<when test="searchBy=='CourseName'">
				where name like #{courseName}
			</when>
			<otherwise>
				where END_DATE &lt;= now();
			</otherwise>
		</choose>
	</select>

	<select id="searchWhereCourse" parameterType="hashmap"
		resultMap="CourseResult">
		select * from courses
		<where>
			<if test="tutorId != null">
				TUTOR_ID = #{tutorId}
			</if>
			<if test="courseName != null">
				and name like #{courseName}
			</if>

			<if test="startDate != null">
				and START_DATE &gt;= #{startDate}
			</if>
			<if test="endDate != null">
				and END_DATE &lt;= #{endDate}
			</if>
		</where>

	</select>

	<select id="searchTrimCourses" parameterType="hashmap"
		resultMap="CourseResult">
		select * from courses
		<trim prefix="where" prefixOverrides="and | or">
			<if test="tutorId != null">
				TUTOR_ID = #{tutorId}
			</if>
			<if test="courseName != null">
				AND name like #{courseName}
			</if>

			<if test="startDate != null">
				AND START_DATE &gt;= #{startDate}
			</if>
			<if test="endDate != null">
				AND END_DATE &lt;= #{endDate}
			</if>
		</trim>
	</select>

	<select id="searchForeachCourses" parameterType="map" resultMap="CourseResult">
		select * from courses
		<if test="tutorIds != null">
			<where>
				tutor_id in
				<foreach item="tutorId" collection="tutorIds" index="index"
					open="(" close=")" separator=",">
					#{tutorId}
				</foreach>
			</where>
		</if>
	</select>


	<update id="updateSetCourse" parameterType="Course">
		update Courses
		<set>
			<if test="name != null">name=#{name},</if>
			<if test="description != null">DESCRIPTION=#{description},</if>
			<if test="startDate != null">START_DATE=#{startDate},</if>
			<if test="endDate != null">END_DATE=#{endDate},</if>
			<if test="tutorId != null">TUTOR_ID=#{tutorId},</if>
		</set>
		WHERE COURSE_ID=#{courseId};
	</update>

	<insert id="insertCourse" parameterType="Course">
		INSERT INTO
		mybatis_dev.courses (COURSE_ID, NAME, DESCRIPTION, START_DATE,
		END_DATE, TUTOR_ID)
		VALUES(#{courseId},#{name},#{description},#{startDate},#{endDate},#{tutorId});

	</insert>

</mapper>